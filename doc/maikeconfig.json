{
	".file": {
		"content": "maike config file",
		"version": [
			1,
			0
		]
	},
	"config": {
		"env": {
			"AR": "ar",
			"AS": "as",
			"CC": "cc",
			"CXX": "g++",
			"LD": "ld"
		},
		"source_file_loaders": {
			"cxx": {
				"compiler": {
					"args": [
						"-c",
						"-std=%cxx:cxxversion%",
						"*-%cxx:cflags%",
						"*-iquote%cxx:iquote%",
						"*-I%cxx:includedir%",
						"-DMAIKE_JOB_ID=%maike:jobid%",
						"-o",
						"%maike:target%",
						"%maike:source%"
					],
					"executable": "%env:CXX%"
				}
			}
		},
		"source_tree_loader": {
			"file_info_loaders": {
				".cpp": "cxx",
				".hpp": "cxx"
			},
			"input_filter": [
				"^\\.",
				"^__"
			],
			"recursive": 1
		},
		"utils": {
			"pkg-config": {},
			"vcs": {
				"get_branch": {
					"args": [
						"rev-parse",
						"--abbrev-ref",
						"HEAD"
					],
					"executable": "git"
				},
				"get_revision": {
					"args": [
						"rev-parse",
						"HEAD"
					],
					"executable": "git"
				},
				"get_version_tag": {
					"args": [
						"describe",
						"--dirty"
					],
					"executable": "git"
				}
			}
		}
	}
}
