{
	".file": {
		"content": "maike config file",
		"version": [
			1,
			0
		]
	},
	"config": {
		"cxx": {
			"compiler": {
				"args": [
					"-c",
					"-std=%cxxversion%",
					"*-%cflags_common%"
					"*-%cflags_extra%",
					"*-iquote%iquote%",
					"*-I%includedir%",
					"-DMAIKE_JOB_ID=%jobid%",
					"-o",
					"%target%",
					"%source%"
				],
				"executable": "%env:CXX%"
			}
		},
		"env": {
			"AR": "ar",
			"AS": "as",
			"CC": "cc",
			"CXX": "g++",
			"LD": "ld"
		},
		"pkg-config": {},
		"source_tree_loader": {
			"file_info_loaders": {
				".cpp": "cxx",
				".hpp": "cxx"
			},
			"input_filter": [
				"^\\.",
				"^__"
			],
			"recursive": true
		},
		"vcs": {
			"get_branch": {
				"args": [
					"rev-parse",
					"--abbrev-ref",
					"HEAD"
				],
				"executable": "git"
			},
			"get_revision": {
				"args": [
					"rev-parse",
					"HEAD"
				],
				"executable": "git"
			},
			"get_version_tag": {
				"args": [
					"describe",
					"--dirty"
				],
				"executable": "git"
			}
		}
	}
}
