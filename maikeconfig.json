{
	"maikeconfig": {
		"dir_compiler": {
			"config": {},
			"recipe": "recipes/make_directory.py"
		},
		"source_file_info_loaders": {
			"app": {
				"compiler": {
					"config": {
						"cflags": [
							"-g"
						]
					},
					"recipe": "recipes/cxx_linker.py"
				},
				"loader": "maikerule"
			},
			"cxx": {
				"compiler": {
					"config": {
						"always_use_default_compiler": 1,
						"cflags": [
							"-g",
							"-Wall",
							"-Wextra",
							"-Werror"
						],
						"iquote": [
							"."
						],
						"std_revision": {
							"min": "c++17"
						}
					},
					"recipe": "recipes/cxx_compiler.py"
				},
				"loader": "cxx_src_loader"
			},
			"cxx_test": {
				"compiler": {
					"config": {
						"actions": [
							"link",
							"run"
						],
						"always_use_default_compiler": 1,
						"cflags": [
							"-g",
							"-Wall",
							"-Wextra",
							"-Werror"
						],
						"iquote": [
							"."
						],
						"std_revision": {
							"min": "c++17"
						}
					},
					"recipe": "recipes/cxx_compiler.py"
				},
				"loader": "cxx_src_loader"
			},
			"doc2html": {
				"compiler": {
					"config": {},
					"recipe": "recipes/doc2html.py",
					"use_get_tags": 1
				},
				"config": {
					"filename_ext_replacement_mode": "replace",
					"target_filename_ext": ".html"
				},
				"loader": "generic"
			},
			"extension": {
				"compiler": {
					"config": {},
					"recipe": ""
				},
				"loader": "extension"
			},
			"identity": {
				"compiler": {
					"config": {},
					"recipe": "recipes/copy_file.py"
				},
				"loader": "generic"
			},
			"md2htmlpart": {
				"compiler": {
					"config": {},
					"recipe": "recipes/md2htmlpart.py",
					"use_get_tags": 1
				},
				"config": {
					"filename_ext_replacement_mode": "replace",
					"target_filename_ext": ".xml"
				},
				"loader": "generic"
			},
			"sass2css": {
				"compiler": {
					"config": {},
					"recipe": "recipes/sass2css.py"
				},
				"config": {
					"filename_ext_replacement_mode": "replace",
					"target_filename_ext": ".css"
				},
				"loader": "generic"
			},
			"vcslog": {
				"compiler": {
					"config": {},
					"recipe": "recipes/vcslog.py"
				},
				"loader": "maikerule"
			}
		},
		"source_tree_loader": {
			"file_info_loaders": {
				".app.maikerule": "app",
				".cpp": "cxx",
				".css": "identity",
				".doc.xml": "doc2html",
				".hpp": "cxx",
				".py": "extension",
				".sass": "sass2css",
				".svg": "identity",
				".test.cpp": "cxx_test",
				".vcslog.maikerule": "vcslog"
			},
			"fullpath_input_filter": [
				"^\\.",
				"^__"
			],
			"input_filter": [
				"^\\.",
				"^__",
				"build.py"
			],
			"recursive": 1
		}
	}
}
